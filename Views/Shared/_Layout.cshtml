<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VitaeSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VitaeSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>
<body>

    <div class="row">

        <div id="caja-menu" class="col-3">

            <div id="carta" class="card" style="width: 18rem;">
                <img id="img" src="https://miro.medium.com/max/1400/1*lMUej0ldDLa-7WgwQrlmcA.png" class="card-img-top" alt="...">
                <div id="titulo-carta" class="card-body">
                    <h5 id="titulo-system" class="card-title"><i class="bi bi-pie-chart-fill"></i> Vitae System</h5>
                </div>
                <ul id="uls" class="list-group list-group-flush">
                    <li id="enlaces" class="list-group-item"><a id="enlace-a" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i>&nbsp; Inicio</a></li>
                    <li id="enlaces" class="list-group-item"><a id="enlace-a" class="nav-link text-dark" asp-area="" asp-controller="Trabajador" asp-action="Index"><i class="bi bi-people-fill"></i>&nbsp; Trabajadores</a></li>
                    <li id="enlaces" class="list-group-item"><a id="enlace-a" class="nav-link text-dark" asp-area="" asp-controller="Solicitante" asp-action="Index"><i class="bi bi-person-square"></i>&nbsp; Solicitantes</a></li>
                    <li id="enlaces" class="list-group-item"><a id="enlace-a" class="nav-link text-dark" asp-area="" asp-controller="Solicitante" asp-action="Aceptados"><i class="bi bi-person-fill-check"></i>&nbsp; Aceptados</a></li>
                    <li id="enlaces" class="list-group-item"><a id="enlace-a" class="nav-link text-dark" asp-area="" asp-controller="Solicitante" asp-action="Rechazados"><i class="bi bi-person-fill-x"></i>&nbsp; Rechazados</a></li>
                </ul>
                <div id="espacio" class="card-body"></div>
                <ul id="uls2" class="list-group list-group-flush">
                    <li id="lis" class="list-group-item"><a id="as" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-box-arrow-in-right"></i>&nbsp; Perfil</a></li>
                </ul>
            </div>

        </div>

        <div id="caja-menu2" class="col">

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
